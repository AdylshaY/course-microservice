{
  "IdentityOption": {
    "Address": "http://localhost:8080/realms/courseTenant",
    "Issuer": "http://localhost:8080/realms/courseTenant",
    "Audience": "Gateway.API"
  },
  "ReverseProxy": {
    // Upstream
    "Routes": {
      "basket-route": {
        "ClusterId": "basket.cluster",
        "Match": {
          "Path": "{version:regex(^v[0-9]+$)}/baskets/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{version}/baskets/{**catch-all}" }
        ],
        "AuthorizationPolicy": "Password"
      },
      "catalog-route": {
        "ClusterId": "catalog.cluster",
        "Match": {
          "Path": "{version:regex(^v[0-9]+$)}/catalogs/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{version}/{**catch-all}" }
        ],
        "AuthorizationPolicy": "ClientCredential"
      },
      "discount-route": {
        "ClusterId": "discount.cluster",
        "Match": {
          "Path": "{version:regex(^v[0-9]+$)}/discounts/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{version}/discounts/{**catch-all}" }
        ],
        "AuthorizationPolicy": "Password"
      },
      "file-route": {
        "ClusterId": "file.cluster",
        "Match": {
          "Path": "{version:regex(^v[0-9]+$)}/files"
        },
        "Transforms": [
          { "PathPattern": "/api/{version}/files" }
        ],
        "AuthorizationPolicy": "ClientCredential"
      },
      "order-route": {
        "ClusterId": "order.cluster",
        "Match": {
          "Path": "{version:regex(^v[0-9]+$)}/orders/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{version}/orders/{**catch-all}" }
        ],
        "AuthorizationPolicy": "Password"
      },
      "payment-route": {
        "ClusterId": "payment.cluster",
        "Match": {
          "Path": "{version:regex(^v[0-9]+$)}/payments/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{version}/payments/{**catch-all}" }
        ],
        "AuthorizationPolicy": "Password"
      }
    },
    // Downstream
    "Clusters": {
      "basket.cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5237/"
          }
        }
      },
      "catalog.cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5277/"
          }
        }
      },
      "discount.cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5062/"
          }
        }
      },
      "file.cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5275/"
          }
        }
      },
      "order.cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5074/"
          }
        }
      },
      "payment.cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5129/"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
