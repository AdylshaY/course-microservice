@page
@model CourseMicroservice.Web.Pages.Auth.SignInModel
@{
}


<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h1>Sign Up</h1>
            </div>
            <div class="card-body">
                <form method="post">

                    <div class="mb-3">
                        <label asp-for="SignInViewModel.Email" class="form-label"></label>
                        <input asp-for="SignInViewModel.Email" class="form-control" />
                        <div class="text-danger">
                            <span asp-validation-for="SignInViewModel.Email"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SignInViewModel.Password" class="form-label"></label>
                        <input asp-for="SignInViewModel.Password" class="form-control" type="password" />
                        <div class="text-danger">
                            <span asp-validation-for="SignInViewModel.Password"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Sign In</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}